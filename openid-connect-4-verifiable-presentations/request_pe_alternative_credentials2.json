{
    "id_token": {
        "verifiable_presentations": {
            // verifiable_presentations element is a presentation_definition
            "submission_requirements": [
                {
                    "name": "Citizenship Information",
                    "rule": "pick",
                    "count": 1,
                    "from_nested": [
                        {
                            "name": "ID Card",
                            "rule": "all",
                            "from": "A"
                        },
                        {
                            "name": "Passport",
                            "rule": "all",
                            "from": "B"
                        }
                    ]
                }
            ],
            "input_descriptors": [
                {
                    "group": [
                        "A"
                    ],
                    "schema": {
                        "uri": [
                            "https://www.w3.org/2018/credentials/examples/v1/IDCardCredential"
                        ]
                    }
                },
                {
                    "group": [
                        "B"
                    ],
                    "schema": {
                        "uri": [
                            "https://www.w3.org/2018/credentials/examples/v1/PassportCredential"
                        ]
                    }
                },
                {
                    "group": [
                        "B"
                    ],
                    "schema": {
                        "uri": [
                            "https://www.w3.org/2018/credentials/examples/v1/UtilityBillCredential"
                        ]
                    }
                }
            ]
        }
    }
}